{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug NestJS (F5)",
            "runtimeExecutable": "/usr/local/bin/node",
            "runtimeArgs": [
                "--inspect",
                "${workspaceFolder}/node_modules/@nestjs/cli/bin/nest.js"
            ],
            "args": [
                "start",
                "--watch"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "protocol": "inspector",
            "restart": true
        }
    ]
}
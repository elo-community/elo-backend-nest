{
  "name": "elo-community",
  "version": "1.0.0",
  "description": "ELO Community - Sports Rating & Reward System",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build:contracts && npm run build:backend",
    "build:contracts": "npm run compile --workspace=contracts",
    "build:backend": "npm run build --workspace=backend",
    "dev": "npm run start:dev --workspace=backend",
    "dev:contracts": "npm run compile --workspace=contracts",
    "contracts:compile": "npm run compile --workspace=contracts",
    "contracts:test": "npm run test --workspace=contracts",
    "contracts:deploy": "npm run deploy:amoy --workspace=contracts",
    "contracts:deploy:amoy": "npm run deploy:amoy --workspace=contracts",
    "contracts:deploy:very": "npm run deploy:very --workspace=contracts",
    "install:all": "npm install && npm install --workspace=contracts && npm install --workspace=backend",
    "clean": "npm run clean --workspaces",
    "setup": "npm run setup:env:all --workspace=backend",
    "setup:env:all": "npm run setup:env:all --workspace=backend",
    "setup:env:amoy:local": "npm run setup:env:amoy:local --workspace=backend",
    "setup:env:amoy:production": "npm run setup:env:amoy:production --workspace=backend",
    "setup:env:very:local": "npm run setup:env:very:local --workspace=backend",
    "setup:env:very:production": "npm run setup:env:very:production --workspace=backend",
    "lint": "eslint packages/*/src/**/*.{ts,js} packages/*/scripts/**/*.{ts,js} packages/*/test/**/*.{ts,js}",
    "lint:fix": "eslint packages/*/src/**/*.{ts,js} packages/*/scripts/**/*.{ts,js} packages/*/test/**/*.{ts,js} --fix",
    "lint:backend": "eslint packages/backend/src/**/*.ts",
    "lint:contracts": "eslint packages/contracts/scripts/**/*.ts packages/contracts/test/**/*.ts",
    "test": "npm run test --workspaces"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.9.2",
    "eslint": "^9.0.0",
    "@eslint/js": "^9.0.0",
    "typescript-eslint": "^8.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "globals": "^15.0.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0"
  }
}